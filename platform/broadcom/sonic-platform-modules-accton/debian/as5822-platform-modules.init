#!/bin/bash

### BEGIN INIT INFO
# Provides:          setup-board
# Required-Start:
# Required-Stop:
# Should-Start:
# Should-Stop:
# Default-Start:     S
# Default-Stop:      0 6
# Short-Description: Setup S5248f board.
### END INIT INFO

case "$1" in
start)
    echo -n "Setting up board... "

    /usr/local/bin/as5822_platform.sh init

    echo "done."
    ;;

stop)
    /usr/local/bin/as5822_platform.sh deinit
    echo "done."

    ;;

restart)
    /usr/local/bin/as5822_platform.sh deinit
    /usr/local/bin/as5822_platform.sh init -force

    ;;

force-reload|restart)
    echo "Not supported"
    ;;

*)
    echo "Usage: /etc/init.d/as5822-platform-modules.init {start|stop}"
    exit 1
    ;;
esac

exit 0
