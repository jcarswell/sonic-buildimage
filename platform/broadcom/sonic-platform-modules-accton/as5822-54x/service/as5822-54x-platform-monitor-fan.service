[Unit]
Description=Accton AS5822-54X Platform Monitoring FAN service
Before=pmon.service
After=as5822-54x-platform-monitor.service
DefaultDependencies=no

[Service]
ExecStart=/usr/local/bin/accton_as5822_54x_monitor_fan.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
